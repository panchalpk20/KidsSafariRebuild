<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:bottomLeftRadius="200dp" android:topLeftRadius="200dp" />
            <stroke android:width="5dp" android:color="#fff" />
            <solid android:color="#ffff5c" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:bottomLeftRadius="200dp" android:topLeftRadius="200dp" />
            <stroke android:width="5dp" android:color="#fff" />
            <gradient android:angle="180" android:centerColor="#ffff6c" android:endColor="#fff" android:startColor="#ffff5c" android:type="linear" />
        </shape>
    </item>

</selector>