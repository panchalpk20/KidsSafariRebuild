<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"

    tools:context=".drawgame.DrawMainActivity">

    <LinearLayout
        android:id="@+id/controlls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="30">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="#123"
            android:orientation="vertical"
            android:weightSum="2">
            <!--            colors-->


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff0000"
                android:onClick="setC"
                android:tag="#ff0000" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00ff00"
                android:onClick="setC"
                android:tag="#00ff00" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000099"
                android:onClick="setC"
                android:tag="#000099" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fffb00"
                android:onClick="setC"
                android:tag="#fffb00" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f700ff"
                android:onClick="setC"
                android:tag="#f700ff" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#469990"
                android:onClick="setC"
                android:tag="#469990" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="#123"
            android:orientation="vertical"
            android:weightSum="2">
            <!--            colors-->


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff6a00"
                android:onClick="setC"
                android:tag="#ff6a00" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00a2ff"
                android:onClick="setC"
                android:tag="#00a2ff" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#9d00ff"
                android:onClick="setC"
                android:tag="#9d00ff" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff0095"
                android:onClick="setC"
                android:tag="#ff0095" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:onClick="setC"
                android:tag="#000000" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/draw_colorpicker"
                android:onClick="colorPeek"
                android:tag="#737373" />


        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="24">

            <com.anngrynerds.kidssafari.drawgame.DrawPadView
                android:id="@+id/drawPadView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#888" />

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:max="100"
                android:progress="29"
                android:progressBackgroundTint="#444" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#123"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">


            <!--            controls-->


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_draw_eraser"
                android:onClick="setC"
                android:tag="#ffffff" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_draw_pencil"
                android:onClick="setC"
                android:tag="pencil" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/draw_save"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_draw_save"
                android:tag="pencil" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/draw_newfile"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:background="@drawable/ic_draw_newfile"
                android:tag="pencil" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="pen sizze"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94" />


</androidx.constraintlayout.widget.ConstraintLayout>