<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#0080ff"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">


    <TextView
        android:id="@+id/draw_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0080ff"
        android:fontFamily="casual"
        android:gravity="left"
        android:text="New Page..."
        android:textColor="#eee"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/draw_dialog_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fdea5c"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Drawing will be Lost !"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#67fff7"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/draw_dialog_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#65ff3a"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Yes"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.679" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/draw_dialog_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff413a"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="no"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.864" />

    </LinearLayout>

</LinearLayout>
